            <li class="active"><a href="/game">ロビー</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if session[:username] %>
              <li><a href="/game/round/exit">ゲームを抜ける</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container main">
      <%= yield %>
    </div>
